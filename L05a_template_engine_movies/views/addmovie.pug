doctype html
html
  head
    title Add movie
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      h1 New movie
      form(action='/addmovie', method='POST')
        div
          label(for="title", class="form-label") Title:
          input(type="text", placeholder="The Fellowship of the Ring", name="title", class="form-control")
        div
          label(for="director", class="form-label") Director:
          input(type="text", placeholder="Peter Jackson", name="director", class="form-control")
        div
          label(for="year", class="form-label") Year:
          input(type="number", placeholder="2001", name="year", class="form-control") 
        div
          input(type="submit", value="Add a new movie!", class="btn btn-primary")