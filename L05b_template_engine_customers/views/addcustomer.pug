doctype html
html
  head
    title Add customer
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
  body
    div.container
      h1 New customer
      form(action='/addcustomer', method='POST')
        div
          label(for="firstname", class="form-label") Firstname:
          input(type="text", placeholder="Joe", name="firstname", class="form-control")
        div
          label(for="lastname", class="form-label") Lastname:
          input(type="text", placeholder="Biden", name="lastname", class="form-control")
        div
          label(for="email", class="form-label") Email:
          input(type="text", placeholder="joe.biden@gmail.com", name="email", class="form-control") 
        div
          label(for="phone", class="form-label") Phone: 
          input(type="text", placeholder="0451942822", name="phone", class="form-control")
        div
          input(type="submit", value="Add a new customer!", class="btn btn-primary")